<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- 生成kaptcha的bean-->
    <bean id="captchaProducer" class="com.google.code.kaptcha.impl.DefaultKaptcha">
        <property name="config">
            <bean class="com.google.code.kaptcha.util.Config">
                <constructor-arg type="java.util.Properties">
                    <!--设置kaptcha属性 -->
                    <props>
                        <!-- 是否有边框 -->
                        <prop key = "kaptcha.border ">yes</prop>
                        <!-- 边框颜色 -->
                        <prop key="kaptcha.border.color">105,179,90</prop>
                        <!-- 字体颜色 -->
                        <prop key="kaptcha.textproducer.font.color">black</prop>
                        <!-- 图片宽度 -->
                        <prop key="kaptcha.image.width">100</prop>
                        <!-- 图片高度 -->
                        <prop key="kaptcha.image.height">50</prop>
                        <!-- 文本字符大小 默认值为40 -->
                        <prop key="kaptcha.textproducer.font.size">26</prop>
                        <!-- 设置SessionKey值 -->
                        <prop key="kaptcha.session.key">code</prop>
                        <!-- 文本字符长度,默认值为5 -->
                        <prop key="kaptcha.textproducer.char.length">4</prop>
                        <!-- 文本字体样式 -->
                        <prop key="kaptcha.text|producer.font.names">宋体,楷体,微软雅黑</prop>
                        <!-- 文本字符内容取值范围 -->
                        <prop key="kaptcha.textproducer.char.string">0123456789ABCEFGHIJKLMNOPQRSTUVWXYZ</prop>
                        <!-- 图片样式 WaterRipple(水纹) FishEyeGimpy(鱼眼) ShadowGimpy(阴影) -->
                        <prop key="kaptcha.obscurificator.impl">com.google.code.kaptcha.impl.WaterRipple</prop>
                        <!-- 噪点颜色 -->
                        <prop key="kaptcha.noise.color">blue</prop>
                        <!-- 噪点生成对象 -->
                        <prop key="kaptcha.noise.impl">com.google.code.kaptcha.impl.DefaultNoise</prop>
                        <!-- 背景颜色渐进 -->
                        <prop key="kaptcha.background.clear.from">30,187,238</prop>
                        <!-- 背景颜色渐进 -->
                        <prop key="kaptcha.background.clear.to">white</prop>
                        <!-- 文本字符间距，默认值为2 -->
                        <prop key="kaptcha.textproducer.char.space">3</prop>
                    </props>
                </constructor-arg>
            </bean>
        </property>
    </bean>
</beans>